<!doctype html> 
<html lang="nl"> 

  <head> 
  
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Administrators: <%= controller.action_name %></title>
    <%= stylesheet_link_tag 'scaffold' %>
    
    <% if controller.controller_name != "featured_items" %>
    <%= javascript_include_tag("jquery-1.5.min") %>
    <script type="text/javascript" src="/tiny_mce/tiny_mce.js"></script>
    <script type="text/javascript">
      tinyMCE.init({
        // General options
        mode : "textareas",
        theme : "advanced",
        plugins : "media,style,layer,advhr,advlink,emotions,inlinepopups,insertdatetime,paste,directionality,noneditable,visualchars,nonbreaking,xhtmlxtras",

        // Theme options
        theme_advanced_buttons1 : "cut,copy,paste,|,bold,italic,underline,strikethrough,|,sub,sup,|,bullist,numlist,blockquote,|,link,unlink,|,insertdate,inserttime,|,media,charmap,emotions",
        theme_advanced_buttons2 : "",
        theme_advanced_buttons3 : "",
        theme_advanced_toolbar_location : "top",
        theme_advanced_toolbar_align : "left",
        theme_advanced_statusbar_location : "bottom",
        theme_advanced_resizing : true,

        paste_text_sticky : true,
        
        // Drop lists for link/image/media/template dialogs
        template_external_list_url : "js/template_list.js",
        external_link_list_url : "js/link_list.js",
        external_image_list_url : "js/image_list.js",
        media_external_list_url : "js/media_list.js",

        // Replace values for the template plugin
        template_replace_values : {
                username : "Some User",
                staffid : "991234"
        }
      });
    </script>
    <% end %>
    
  </head>
  <body>
    <div id="wrapper">
      <ul id="menu">
        <li><a href="/backend/sign_in">Sign in</a></li>
        <li><a href="/backend">Backend Home</a></li>
        <li><a href="/administrators">Administrators</a></li>
        <li><a href="/blog_posts">Blog posts</a></li>
        <li><a href="/gigs">Gigs</a></li>
        <li><a href="/featured_items">Featured items</a></li>
        <li><a href="/backend/sign_out">Sign out</a></li>
      </ul>
      <h1 id="title">
        <%=h yield(:title) %>
      </h1>
      <div id="messages">
        <p class="notice"><%= flash[:notice] %></p>
        <p class="error"><%= flash[:error] %></p>
      </div>
      <div id="content">
        <%= yield %>
      </div>
    </div>

  </body>
</html>