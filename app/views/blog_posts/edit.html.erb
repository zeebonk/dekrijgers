<% content_for :title, "Editing blog post" %>

<% form_for(@blog_post, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <dl>
    <dt>
      <%= f.label :title %>
    </dt>
    <dd>
      <%= f.text_field :title %>
    </dd>
    <dt>
      <%= f.label :content %>
    </dt>
    <dd>
      <%= f.text_area :content %>
    </dd>
    <dt>
      <%= f.label :image %>
    </dt>
    <dd>
      <%= f.file_field :image %>
    </dd>
    <% if !@blog_post.image.blank? %>
      <dt>
        Current image
      </dt>
      <dd>
        Remove? <%= check_box_tag("remove_image", "1") %><br/>
        <%= image_tag("/images/small/" + @blog_post.image) %>
      </dd> 
    <% end %>
  </dl>
  
  <%= f.submit 'Update' %>
  
<% end %>

<%= link_to 'Back', blog_posts_path %>