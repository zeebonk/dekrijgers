<% content_for :title, "New administrator" %>

<% form_for(@administrator) do |f| %>
  <%= f.error_messages %>

  <dl>
    <dt>
      <%= f.label :name %>
    </dt>
    <dd>
      <%= f.text_field :name %>
    </dd>
    <dt>
      <%= f.label :password %>
    </dt>
    <dd>
      <%= f.password_field :password %>
    </dd>
    <dt>
      <%= f.label :password_confirmation %>
    </dt>
    <dd>
      <%= f.password_field :password_confirmation %>
    </dd>
  </dl>

  <%= f.submit 'Create' %>
  
<% end %>

<%= link_to 'Back', administrators_path %>