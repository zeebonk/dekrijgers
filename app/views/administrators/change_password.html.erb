<% content_for :title, "Change password" %>

<% form_for(@administrator, :as => :post, :url => "/administrators/update_password/" + @administrator.id.to_s) do |f| %>
  <%= f.error_messages %>
  
  <dl>
    <dt>
      <%= f.label :password %>
    </dt>
    <dd>
      <%= f.password_field :password %>
    </dd>
    <dt>
      <%= f.label :password_confirmation %>
    </dt>
    <dd>
      <%= f.password_field :password_confirmation %>
    </dd>
  </dl>
  
  <%= f.submit 'Update' %>

<% end %>

<%= link_to 'Back', administrators_path %>