<% content_for :title, "Sign in" %>

<% form_tag :action => 'authenticate' do %>
  <p>
    <%= label_tag "name", "Name" %><br/>
    <%= text_field_tag :name, params[:name], :class => 'text-box' %><br/>
  </p>
  <p>
    <%= label_tag "password", "Password" %><br/>
    <%= password_field_tag :password, params[:password], :class => 'text-box' %><br/>
  </p>
  <p>
    <%= submit_tag "Sign in", :class=>'submit' %>
  </p>
<% end %>